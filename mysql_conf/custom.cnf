[mysqld]
character-set-server=utf8
explicit_defaults_for_timestamp = true
# 本番同様28800(8h)だとconnection timeoutによる不具合に気が付かない
# ので、一旦300(5m)にしておく事で、開発環境でも不具合を再現しやすくする
wait_timeout=300
interactive_timeout=300
# `mysql`.`general_log` テーブルに実行されたSQLが蓄積される。
# 放っておくとテーブルサイズが大きくなると思われるので、
# 普段はコメントアウトしておいても良い。
# general_log=1
# log_output=TABLE
